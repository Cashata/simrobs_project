<?xml version="1.0" encoding="utf-8"?>
<mujoco model="simple_wheeled_robot">
  <!-- Настройки -->
  <option timestep="0.0001" integrator="RK4" cone="elliptic"/>
  <option gravity="0 0 -9.81"/>

  <!-- Статистика -->
  <statistic center="0 0 0.5" extent="2"/>

  <!-- Мир -->
  <worldbody>
    <!-- Пол -->
    <light name="top" pos="0 0 3" dir="0 0 -1" directional="true"/>
    <geom name="floor" type="plane" size="10 10 0.1" rgba="0.8 0.9 0.8 1" friction="1 0.005 0.0001"/>

    <!-- Робот с колесами, прикрепленными непосредственно к корпусу -->
    <body name="robot" pos="0 0 0.5">
      <freejoint name="root"/>

      <!-- Корпус (20x14x10 см, 0.7 кг) - Z позиция = 0 -->
      <geom name="torso_geom" type="box" size="0.1 0.07 0.05" pos="0 0 0" mass="0.7" rgba="0.2 0.6 1 1"/>

      <!-- Левое колесо - соприкасается с корпусом -->
      <body name="left_wheel" pos="0 0.07 0">  <!-- Y=0.07 (ширина корпуса 0.07), Z=0 (такая же высота) -->
        <joint name="left_wheel_joint" type="hinge" axis="0 1 0" pos="0 0 0" limited="false"/>
        <geom name="left_wheel_geom" type="cylinder" size="0.1 0.01"
              euler="90 0 0" mass="0.3" rgba="0.3 0.3 0.3 1"/>
      </body>

      <!-- Правое колесо - соприкасается с корпусом -->
      <body name="right_wheel" pos="0 -0.07 0">  <!-- Y=-0.07 (ширина корпуса 0.07), Z=0 (такая же высота) -->
        <joint name="right_wheel_joint" type="hinge" axis="0 1 0" pos="0 0 0" limited="false"/>
        <geom name="right_wheel_geom" type="cylinder" size="0.1 0.01"
              euler="90 0 0" mass="0.3" rgba="0.3 0.3 0.3 1"/>
      </body>
    </body>
  </worldbody>

  <!-- Приводы -->
  <actuator>
    <!-- Двигатели колес -->
    <motor name="left_wheel_motor" joint="left_wheel_joint" gear="50" ctrllimited="true" ctrlrange="-100 100"/>
    <motor name="right_wheel_motor" joint="right_wheel_joint" gear="50" ctrllimited="true" ctrlrange="-100 100"/>
  </actuator>

  <!-- Датчики -->
  <sensor>
    <!-- Позиция и ориентация корпуса -->
    <framepos name="robot_pos" objtype="body" objname="robot"/>
    <framequat name="robot_quat" objtype="body" objname="robot"/>

    <!-- Скорость колес -->
    <jointvel name="left_wheel_vel" joint="left_wheel_joint"/>
    <jointvel name="right_wheel_vel" joint="right_wheel_joint"/>
  </sensor>
</mujoco>