<?xml version="1.0" encoding="utf-8"?>
<mujoco model="wheeled_robot">
  <!-- Настройки -->
  <option timestep="0.005"/>
  <option gravity="0 0 -9.81"/>
  <option integrator="RK4"/>

  <!-- Мир -->
  <worldbody>
    <!-- Пол -->
    <light name="top" pos="0 0 3" dir="0 0 -1" directional="true"/>
    <geom name="floor" type="plane" size="10 10 0.1" rgba="0.8 0.9 0.8 1" friction="1.0 0.005 0.0001"/>

    <!-- Основное тело робота -->
    <body name="base" pos="0 0 0.66">
      <!-- Свободное соединение - позволяет телу двигаться во всех направлениях -->
      <freejoint name="base_joint"/>

      <geom name="base_geom" type="box" size="0.15 0.08 0.1" mass="2.0" rgba="0.2 0.6 1 1"/>

      <!-- Левое колесо -->
      <body name="left_wheel" pos="0 0.15 -0.1">
        <joint name="left_wheel_hinge" type="hinge" axis="0 1 0" pos="0 0 0"/>
        <geom name="left_wheel_geom" type="cylinder" size="0.08 0.02"
              euler="90 0 0" mass="0.5" rgba="0.3 0.3 0.3 1"/>
      </body>

      <!-- Правое колесо -->
      <body name="right_wheel" pos="0 -0.15 -0.1">
        <joint name="right_wheel_hinge" type="hinge" axis="0 1 0" pos="0 0 0"/>
        <geom name="right_wheel_geom" type="cylinder" size="0.08 0.02"
              euler="90 0 0" mass="0.5" rgba="0.3 0.3 0.3 1"/>
      </body>
    </body>
  </worldbody>

  <!-- Приводы -->
  <actuator>
    <!-- Двигатели колес -->
    <motor name="left_wheel_motor" joint="left_wheel_hinge" gear="100"/>
    <motor name="right_wheel_motor" joint="right_wheel_hinge" gear="100"/>
  </actuator>
</mujoco>